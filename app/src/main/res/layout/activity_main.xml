                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="#A37DFD"
                    android:text="@string/level4"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnAddition5"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#A37DFD"
                    android:text="@string/level5"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayoutAddition2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAddition6"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="#A37DFD"
                    android:text="@string/level6"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnAddition7"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="#A37DFD"
                    android:text="@string/level7"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnAddition8"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="#A37DFD"
                    android:text="@string/level8"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnAddition9"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="#A37DFD"
                    android:text="@string/level9"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnAddition10"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#A37DFD"
                    android:text="@string/level10"
                    android:textSize="20sp" />
            </LinearLayout>
            <!--引き算-->
            <TextView
                android:id="@+id/textSubtraction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/subtraction"
                android:textSize="34sp"
                app:layout_constraintStart_toStartOf="@+id/linearLayout4"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout1"
                tools:layout_editor_absoluteX="115dp" />

            <LinearLayout
                android:id="@+id/linearLayoutSubtraction1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSubtraction1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="#A37DFD"
                    android:text="@string/level1"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnSubtraction2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="#A37DFD"
                    android:text="@string/level2"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnSubtraction3"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="#A37DFD"
                    android:text="@string/level3"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnSubtraction4"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="#A37DFD"
                    android:text="@string/level4"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnSubtraction5"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#A37DFD"
                    android:text="@string/level5"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutSubtraction2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSubtraction6"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="#A37DFD"
